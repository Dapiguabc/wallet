{
  "name": "Lamden",
  "version": "0.0.5",
  "description": "Wallet for Lamden's Cilanto blockchain as well as a tool for taking part in Lamden's atomic swap platform",
  "manifest_version": 2,
  "icons": {
    "16": "icons/lamden-16.png",
    "32": "icons/lamden-32.png",
    "48": "icons/lamden-48.png",
    "128": "icons/lamden-128.png"
  },
  "permissions": [
    "storage",
    "*://*.anarchynet.io/*",
    "*://*.theanarchy.net/*"
  ],
  "browser_action": {
    "default_title": "Lamden",
    "default_popup": "pages/popup.html",
    "default_icon": {
      "16": "icons/lamden-16.png",
      "32": "icons/lamden-32.png",
      "48": "icons/lamden-48.png",
      "128": "icons/lamden-128.png"
    }
  },
  "background": {
    "page": "pages/background.html"
  },
  "content_scripts": [{
    "js": [
      "js/content.js"
    ],
    "run_at": "document_end",
    "matches": ["<all_urls>"],
    "all_frames": true
  }],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
